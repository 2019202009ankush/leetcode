class Solution {
public:
    int reverse(int x) {
       if(y<=INT_MIN||y>=INT_MAX) return 0;
        if(abs(y)<=9) return y;
        
        long int x=abs(y);
        string s=to_string(x);
        std::reverse(s.begin(),s.end());
        
        long int ans=stol(s);
        if(ans<=INT_MIN||ans>=INT_MAX) return 0;
        else return y<0?ans*-1:ans;
        
    }
};